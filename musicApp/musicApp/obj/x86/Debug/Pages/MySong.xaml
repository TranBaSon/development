<Page
    x:Class="musicApp.Pages.MySong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:musicApp.Pages"
    xmlns:models="using:musicApp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2'                                   >
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <ListView x:ConnectionId='11' x:Name="Songs"                               Height="900" IsItemClickEnabled="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollMode="Enabled">
                <ListView.ItemTemplate>
                    <DataTemplate                         >
                        <Grid x:ConnectionId='13' Margin="0,12,0,12"                                          >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="150"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image x:ConnectionId='14'                             MaxWidth="100" Stretch="Fill"/>
                            <StackPanel Margin="12,0,0,0" Grid.Column="1" >
                                <TextBlock x:ConnectionId='15'                      FontFamily="Segoe UI" FontSize="14" FontWeight="SemiBold" Style="{ThemeResource BaseTextBlockStyle}" HorizontalAlignment="Left" Margin="0,0,0,6" LineHeight="20"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='17'                        FontFamily="Segoe UI" FontWeight="Normal" LineHeight="20" Style="{ThemeResource BodyTextBlockStyle}" TextTrimming="CharacterEllipsis" Width="350" MaxLines="1"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:ConnectionId='16'                        FontFamily="Segoe UI" FontSize="12" FontWeight="Normal" HorizontalAlignment="Left" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,0,0,0"/>
                                    <TextBlock Text="" FontFamily="Segoe UI" FontSize="12" FontWeight="Normal" HorizontalAlignment="Left" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" Grid.Row="1" Background="#bbded6">

            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:ConnectionId='8' Text="00:00" Name="currentTime" Margin="20 10" HorizontalAlignment="Center" />
                    <Slider x:ConnectionId='9'  HorizontalAlignment="Center"  VerticalAlignment="Center" Width="900" Minimum="0" x:Name="timelineSlider"                                            />
                    <TextBlock x:ConnectionId='10' Text="00:00" Margin="20 10" Name="totalTime" HorizontalAlignment="Center" />
                </StackPanel>
                <CommandBar HorizontalAlignment="Center" Background="#bbded6">
                    
                    <AppBarToggleButton Icon="Shuffle" Label="Shuffle"/>
                    <AppBarToggleButton Icon="RepeatAll" Label="Repeat"/>
                    <AppBarSeparator/>
                    <AppBarButton x:ConnectionId='4' Icon="Back" Label="Previous"                         />
                    <AppBarButton x:ConnectionId='5' x:Name="PlayButton" Icon="Play" Label="Play"                           />
                    <AppBarButton x:ConnectionId='6' Icon="Forward" Label="Next"                     />

                    <CommandBar.SecondaryCommands>
                        <AppBarButton Label="Like"/>
                        <AppBarButton Label="Dislike"/>
                    </CommandBar.SecondaryCommands>

                    <CommandBar.Content>
                        <TextBlock x:ConnectionId='7' HorizontalAlignment="Left" x:Name="StatusText" Text="Now playing..." Margin="12,14"/>
                    </CommandBar.Content>

                </CommandBar>
                
            </StackPanel>


            <MediaPlayerElement x:ConnectionId='3' x:Name="MyPlayer" />
            
        </StackPanel>

    </Grid>
</Page>

